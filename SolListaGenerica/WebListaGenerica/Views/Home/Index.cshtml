@using WebListaGenerica.Models.Business.Entitys
@model List<EntMascota>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Lib/fontawesome-free-5.15.2-web/css/all.min.css" rel="stylesheet" />
    <link href="~/Styles/Mascotas.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <header>
        <div id="top_element"> 
        </div>
        <div id="main_search_element">
            <div id="search_icon_circle">
                <div id="search_icon_background">
                    <i class="fa fa-search action-expand" aria-hidden="true"></i>
                    <form action="/Home/Buscar" method="post">
                        <input type="search" placeholder="Buscar" name="nombreMascota" pattern=".*\S.*" required />
                    </form>
                    <i class="fa fa-times action-collapse" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </header>
    <div class="row">
        @foreach (EntMascota m in Model)
        {
            <div class="photo">
                @if (m.Especie == "Felino")
                {
                    <img src=" http://placekitten.com/250/250?random">
                }
                else
                {
                    <img src="https://placedog.net/250/250?random">
                }
                <div class="text">
                    <p>@m.Nombre</p>
                </div>
                <div class="socials">
                    <a href="@Url.Action("Editar", "Home", new {id = m.Id_Mascota})" class="far fa-edit"> </a>
                    <a href="@Url.Action("Borrar", "Home", new {id = m.Id_Mascota})" onclick="return confirm('¿Estas seguro de eliminar?')" class="fas fa-trash-alt rojo"> </a>
                </div>
            </div>
        }
        <div class="socials">
            <a href="@Url.Action("Agregar", "Home")" class="fa fa-plus morado"> </a>
            
        </div>
    </div>
    <script src="~/Models/JS/Header.js"></script>
</body>
</html>
